{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "react"
        ],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "outDir": "dist"
    },
    "include": [
        "src"
    ]
}